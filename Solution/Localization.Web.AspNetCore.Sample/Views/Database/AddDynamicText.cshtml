@using Localization.AspNetCore.Service
@model Localization.Web.AspNetCore.Sample.Models.DynamicTextViewModel
@inject ILocalization Localizer

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
</head>
<body>
<section id="saveDynamicTextForm">
    @using (Html.BeginForm("SaveDynamicText", "Database", new {returnUrl = ViewData["ReturnUrl"]}, FormMethod.Post, true, new {@class = "form-horizontal", role = "form"}))
    {
        <h4>@Localizer.Translate("save-dynamic-text-title")</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(m => m.Culture, new {@class = "col-md-3 control-label"})
            <div class="col-md-8">
                @Html.DropDownListFor(m => m.Culture, Model.SupportedCultures, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new {@class = "col-md-3 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Name, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Text, new {@class = "col-md-3 control-label"})
            <div class="col-md-8">
                @Html.TextBoxFor(m => m.Text, new {@class = "form-control"})
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <input type="submit" value="@Localizer.Translate("Save")" class="btn btn-default"/>
            </div>
        </div>
    }
</section>
</body>
</html>